<?xml version="1.0"?>
<config>
   <tabs>
		<simpleproduct  translate="label" module="sourav_quantitydropdown">
				<label>Product Quantity DropDown</label>
				<sort_order>100</sort_order>
		</simpleproduct>
    </tabs>
	<sections>
			<quantityoptionconfig translate="label" module="sourav_quantitydropdown">
			<label>Configuration</label>
			<tab>simpleproduct</tab>
			<class>separator-top</class>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
			<productquantity_group translate="label">
    				 <label>General Setting</label>
	     			 <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
			<fields>
                <productquantity_enable translate="label comment">
                            <label>Enabled</label>
                            <comment>To show "Dropdown" with custom option values in the simple product quantity section.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </productquantity_enable>
					
			</fields>
			
		</productquantity_group>     
	 	 </groups>
		</quantityoptionconfig>
			
			<information translate="label" module="sourav_quantitydropdown">
			<label>Information</label>
			<tab>simpleproduct</tab>
			<class>separator-top</class>
			<sort_order>11</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
			   	<information_group translate="label">
    				 <label>About Us</label>
	     			 <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
			        <frontend_model>sourav_quantitydropdown/adminhtml_system_config_form_fieldset_about</frontend_model> 
				   </information_group>
			</groups>
		</information>
</sections>


</config>